
set $lock swaylock -f -c 000000 -i /home/dulvui/sync/computer/assets/solarized-debian.svg

# Idle lock
exec swayidle -w \
         timeout 300 '$lock'\
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep '$lock'

# Lock screen keybind
bindsym Ctrl+Alt+l exec $lock 

